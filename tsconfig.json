{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "lib/typescript",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["react"],
    "paths": {
      "react-native": ["node_modules/react-native"],
      "react": ["node_modules/react"],
      "react-native-cas": ["./src/index"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "example"]
}
